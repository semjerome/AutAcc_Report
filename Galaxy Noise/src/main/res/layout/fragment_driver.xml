<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:text="@string/add"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="11dp"
        android:id="@+id/btnDriverAdd"
        android:drawableTop="@drawable/ic_save"
        android:elevation="0dp"
        android:visibility="visible"
        android:background="@drawable/buttonshape"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp" />

    <ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/my_border"
        android:id="@+id/layDriver"
        android:layout_alignParentTop="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/layout_dimension"
        android:id="@+id/layout_driver">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layFName"
            android:layout_below="@+id/layLicense"
            android:layout_alignParentStart="true">


            <TextView
                android:text="First Name:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtFname"
                android:layout_alignTop="@+id/layModel"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColorLink="@color/colorEditText"

                android:ems="10"
                android:id="@+id/etFname" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layLname"
            android:layout_below="@+id/layFName"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Last Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvPW"
                android:id="@+id/txtLname"
                android:layout_below="@+id/tvPW" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorLink="@color/colorEditText"

                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etLname" />


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layGender"
            android:layout_below="@+id/layLname"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Gender:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtGender"
                android:layout_alignTop="@+id/layModel"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColorLink="@color/colorEditText"

                android:ems="10"
                android:id="@+id/etGender" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/layLicense"
            android:layout_above="@+id/layFname"
            android:layout_alignParentStart="true">

            <TextView
                android:text="License:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtLicense"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:ems="10"
                android:textColorLink="@color/colorEditText"
                android:id="@+id/etLicense" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layInsuranceNumber"
            android:layout_below="@+id/layGender"
            android:layout_alignParentStart="true">

            <TextView
                android:text="Insurance Number:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tvPW"
                android:id="@+id/txtInsurance"
                android:layout_below="@+id/tvPW" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorLink="@color/colorEditText"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/etInsurance" />


            </LinearLayout>


        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
